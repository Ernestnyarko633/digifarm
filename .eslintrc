{
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "space-before-function-paren": "off",
    "react/no-unescaped-entities": [
      "error",
      {
        "forbid": [
          ">",
          "}"
        ]
      }
    ],
    "react/jsx-indent": [
      "error",
      2
    ],
    "key-spacing": [
      "error",
      {
        "afterColon": true
      }
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "no-extra-semi": "off",
    "react/display-name": "off",
    "react/jsx-first-prop-new-line": "off",
    "react/jsx-closing-bracket-location": "off",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "singleQuote": true,
        "jsxSingleQuote": true,
        "tabWidth": 2,
        "printWidth": 80,
        "semi": false,
        "arrowParens": "avoid",
        "endOfLine": "auto"
      }
    ]
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "prettier/react",
    "plugin:react/recommended",
    "@1f8/eslint-config-react"
  ]
}
